<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Home Page</title>
</head>
<body>
<h1>This is the home page</h1>
<p>
  <%= link_to 'Return to articles listing', users_path %>
</p>
<p>
  <%= link_to 'Articles listing', articles_path %>
</p>

<p>
  <%= link_to 'About page', about_path %>
</p>

<% if logged_in? %>
  <a href="#">
    <%= "(Admin)" if current_user.admin? %> Profile [<%= current_user.username %>
  </a>
  <p>
    <%= link_to current_user.username, user_path(current_user) %>
  </p>
  <p>
    <%= link_to "View your profile", user_path(current_user) %>
  </p>
  <p>
    <%= link_to "Edit your profile", edit_user_path(current_user) %>
  </p>
  <p>
    <%= link_to "Delete your profile", user_path(current_user), method: :delete %>
  </p>
  <p>
    <%= button_to 'Logout', logout_path, method: :delete %>
  </p>
<% else %>
  <p>
    <%= link_to 'Login', login_path %>
  </p>

  <p>
    <%= link_to 'Sign up', signup_path %>
  </p>
<% end %>

<a href="#"> Categories</a>
<% if logged_in? && current_user.admin? %>
<%= link_to "Create new category", new_category_path %>
<% end %>

<%= link_to "View categories", categories_path %>
</body>
</html>
<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Login for Alpha Blog</title>
</head>
<body>
<h1>Login</h1>
<br>
<%= form_with(scope: :session, url: login_path, local: true) do |f| %>
  <p>
    <%= f.label :email %><br>
    <%= f.email_field :email, placeholder: "Enter your email address" %>
  </p>
  <p>
    <%= f.label :password %><br>
    <%= f.password_field :password, placeholder: "Enter your password" %>
  </p>
  <%= f.submit "Login" %>
<% end %>

<p>
  <p>Don't have an account? <%= link_to "Sign up", signup_path %></p>
</p>
</body>
</html>